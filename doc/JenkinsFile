pipeline {
    agent none
    environment {
        registry = "desp0916/msa-poc-basic-1.git"
        registryCredential = 'DockerHub-desp0916'
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2'
                }
            }
            steps {
                echo 'Checkout from PIC Gitlab'
                git url: 'https://github.com/desp0916/msa-poc-basic-1.git', branch: 'master'
            }
        }
       stage('Display /root/.m2/settings.xml') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2'
                }
            }
            steps {
                sh 'echo $HOME'
            }
        }
        stage('Build jar') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Build Docker image') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2 -v /Users/gary/.kube:/root/.kube -v /Users/gary/.minikube:/Users/gary/.minikube'
                }
            }
            steps {
                sh 'mvn fabric8:build -Ddocker.push.registry=192.168.0.1:5000/poc/msa-poc-basic-1 -Ddocker.username=gary'
            }
        }
        stage('Push Docker image') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2 -v /Users/gary/.kube:/root/.kube -v /Users/gary/.minikube:/Users/gary/.minikube'
                }
            }
            steps {
                sh 'mvn fabric8:push -Ddocker.push.registry=192.168.0.1:5000/poc/msa-poc-basic-1 -Ddocker.username=gary'
            }
        }
        stage('Generate K8S resources') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2 -v /Users/gary/.kube:/root/.kube -v /Users/gary/.minikube:/Users/gary/.minikube'
                }
            }
            steps {
                sh 'mvn fabric8:resource'
            }
        }
        stage('Deploy to K8S') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /Users/gary/.m2:/root/.m2 -v /Users/gary/.kube:/root/.kube -v /Users/gary/.minikube:/Users/gary/.minikube'
                }
            }
            steps {
                sh 'mvn fabric8:deploy -DskipTests -Ddocker.pull.registry=kube-registry:5000/poc/msa-poc-basic-1 -Ddocker.username=gary'
            }
        }
    }
}
