pipeline {
    agent none
    environment {
        registry = "desp0916/msa-poc-basic-1.git"
        registryCredential = 'DockerHub-desp0916'
        dockerImage = ''
    }
    stages {
        stage('Checkout') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                echo 'Checkout from PIC Gitlab'
                git url: 'https://github.com/desp0916/msa-poc-basic-1.git', branch: 'master'
            }
        }
        stage('Build jar') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Building docker image') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Push docker image') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn fabric8:build'
            }
        }
        stage('Generate K8S resources') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn fabric8:resource'
            }
        }
        stage('Deploy to K8S') {
            agent {
                docker {
                    label 'docker'
                    image 'maven:3.6.3-jdk-8'
                    args '-v /root/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn fabric8:deploy'
            }
        }
    }
}
